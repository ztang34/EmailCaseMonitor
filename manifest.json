{
    "manifest_version": 2,

    "name": "Email Case Monitor",
    "description": "Monitor new email cases support queue",
    "version": "1.0",
	
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://maxcdn.bootstrapcdn.com https://cdnjs.cloudflare.com https://ajax.googleapis.com; object-src 'self'",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "default.html"
    },
	
	"background":{
		"page": "background.html"
	},
	
	"permissions": [
		"http://*/",
		"notifications"
]
}